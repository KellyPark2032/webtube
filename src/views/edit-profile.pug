extends base

block content 
    img(src="/" + logeedInUser.avatarUrl, width="100", height="100");
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar 
        input(type="file", id="avatar" name="avatar" accept="image/*")
        input(placeholder="Name", name="name", type="text", required, value="logeedInUser.name")
        input(placeholder="Email", name="email", type="email", required, value="logeedInUser.email")
        input(placeholder="Username", name="username", type="text", required, value="logeedInUser.username")
        input(placeholder="Location", name="location", type="text", required, value="logeedInUser.location")
        input(type="submit", value="Update Profile")